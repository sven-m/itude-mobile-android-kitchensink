<Configuration xmlns="http://itude.com/schemas/MB/2.0">

    <View>

        <Page
            name="PAGE-catalog"
            document="CATALOG"
            scrollable="false"
            title="Catalog" >

            <Panel type="LIST" >

                <Panel
                    title="Plants"
                    type="SECTION" >

                    <Panel type="LISTVIEW" >

                        <ForEach
                            suppressRowComponent="TRUE"
                            value="/PLANT" >

                            <Panel
                                outcome="OUTCOME-plant-detail"
                                path="."
                                type="ROW" >

                                <Field
                                    dataType="firstLetter"
                                    path="COMMON[0]/@text()"
                                    type="SECTION-MARKER" />

                                <Field
                                    path="COMMON[0]/@text()"
                                    type="LABEL" />

                                <!-- <Field type="BUTTON" style="NAVIGATION" path="." outcome="OUTCOME-plant-detail"/> -->
                            </Panel>
                        </ForEach>
                    </Panel>

                    <!-- the ForEach element creates a new for each element of type PLANT -->
                </Panel>

                <!-- Demonstrates the outcome on a Panel of type="ROW" -->

                <Panel
                    title="Outcome example with path"
                    type="SECTION" >

                    <Panel
                        outcome="OUTCOME-plant-detail"
                        path="/PLANT[1]"
                        type="ROW" >

                        <Field
                            path="PLANT[1]/COMMON[0]/@text()"
                            type="LABEL" />
                    </Panel>
                </Panel>
            </Panel>
        </Page>
    </View>

</Configuration>