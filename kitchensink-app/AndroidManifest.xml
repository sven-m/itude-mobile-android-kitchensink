<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.itude.mobile.kitchensink"
    android:versionCode="1"
    android:versionName="0.0.0.1-SNAPSHOT" >

    <uses-sdk
        android:minSdkVersion="4"
        android:targetSdkVersion="14" />

    <uses-permission android:name="android.permission.GET_TASKS" />

    <application
        android:name="com.itude.mobile.kitchensink.ApplicationController"
        android:debuggable="true" >
        <activity
            android:name="com.itude.mobile.mobbl2.client.core.MBSplashScreen"
            android:noHistory="true"
            android:theme="@android:style/Theme.NoTitleBar.Fullscreen" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.itude.mobile.mobbl2.client.core.controller.MBViewManager"
            android:configChanges="orientation|screenSize|keyboardHidden" />
        <activity
            android:name="com.itude.mobile.mobbl2.client.core.controller.MBPhoneViewManager"
            android:configChanges="orientation|screenSize|keyboardHidden" />
        <activity
            android:name="com.itude.mobile.mobbl2.client.core.controller.MBTabletViewManager"
            android:configChanges="orientation|screenSize|keyboardHidden" />
    </application>

</manifest>